# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cybersecurity_platform
DB_USER=postgres
DB_PASSWORD=admin

# Authentication
JWT_SECRET=your_jwt_token_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_token_refresh_secret
JWT_REFRESH_SECRET_IN=7d

# AI Configuration
GOOGLE_AI_API_KEY=your_token
AI_MODEL=gemini-pro
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Frontend URL
FRONTEND_URL=http://localhost:5000

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=example@gmail.com
EMAIL_PASS=example

# Logging
LOG_LEVEL=info
